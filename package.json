{
  "name": "go-network-framework",
  "version": "0.2.10",
  "repository": {
    "type": "git",
    "url": "https://github.com/gonetwork-project/gonetwork-framework.git"
  },
  "description": "blockchain-service & state-channel engine for react-native environments",
  "main": "lib/index.js",
  "scripts": {
    "test-clear": "rm temp/contract-addresses.json || true",
    "test-unit": "yarn test-clear && GONET_TEST_ENV=local,infura jest src/blockchain src/state-channel --coverage",
    "test-unit-dev": "yarn test-clear && GONET_TEST_ENV=local jest --watch",
    "test-inte": "yarn test-clear && jest src/tests",
    "lint": "node_modules/tslint/bin/tslint -c tslint.json 'src/**/*.ts'",
    "lint-js": "node node_modules/standard/bin/cmd 'src/state-channel/**/*.js' 'test/**/*.js' 'demo/**/*.js'",
    "watch": "rm -rf lib/ && node_modules/typescript/bin/tsc --watch",
    "compile": "rm -rf lib/ && node_modules/typescript/bin/tsc --declaration",
    "ganache": "yarn compile && node lib/tests/ganache-server.js",
    "compile-dev": "rm -rf build-dev && node_modules/.bin/tsc -p dev/tsconfig.json",
    "run-dev": "node build-dev",
    "dev": "yarn compile-dev && yarn run-dev",
    "abi-to-ts": "yarn compile-dev && node build-dev/scripts/abi-to-ts.js"
  },
  "author": "Amit Shah",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.1.0",
    "@types/node": "^9.6.21",
    "@types/sjcl": "^1.0.28",
    "ethereumjs-wallet": "^0.6.0",
    "ganache-core": "^2.1.5",
    "jest": "^23.1.0",
    "jsdocs": "^1.0.0",
    "mqtt-connection": "^4.0.0",
    "node-fetch": "^2.1.2",
    "node-persist": "^2.1.0",
    "qrcode": "^1.2.0",
    "solc": "^0.4.21",
    "standard": "^10.0.3",
    "tape": "^4.9.0",
    "truffle-contract": "^3.0.5",
    "truffle-wallet-provider": "0.0.5",
    "ts-jest": "^23.1.4",
    "ts-loader": "^4.2.0",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typescript": "3.0.1",
    "web3": "^1.0.0-beta.34",
    "websocket-stream": "^5.1.2",
    "ws": "^5.2.2"
  },
  "dependencies": {
    "bn.js": "^4.11.8",
    "ethereumjs-abi": "^0.6.5",
    "ethereumjs-tx": "^1.3.4",
    "ethereumjs-util": "^5.1.5",
    "machina": "^2.0.2",
    "mqtt": "^2.15.3",
    "rlp": "^2.0.0",
    "rxjs": "^5.5.8",
    "sjcl": "^1.0.7"
  },
  "typings": "./lib/index.d.ts",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coveragePathIgnorePatterns": [
      "./src/e2e",
      "./src/blockchain/spec.base.ts",
      "./src/__GEN__",
      "./src/types",
      "./src/tests",
      "./src/utils/mocks",
      "./src/observable-add",
      "./src/state-channel/__test__"
    ],
    "rootDir": "./src",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "eth-types": "<rootDir>/types/eth.ts"
    }
  }
}
